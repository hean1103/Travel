<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mission">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추천 경로 "
            android:textColor="#ffffff"
            android:textSize="25dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:text=":대한민국 > 서울 > 종로구"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:background="@drawable/bucket" />

    </LinearLayout>
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/after_paths">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="309dp">

                <Button
                    android:id="@+id/ok_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="결정"
                    android:background="#00ffffff"
                    android:textColor="#ff0101"
                    android:layout_marginLeft="210dp"
                    android:layout_marginTop="50dp"/>

                <Button
                    android:id="@+id/modi_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수정"
                    android:textColor="#ff0101"
                    android:background="#00ffffff"
                    android:layout_marginTop="50dp"/>

            </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="85dp"
             android:gravity="bottom|right">

             <Button
                 android:id="@+id/ok_button2"
                 android:layout_width="50dp"
                 android:layout_height="21dp"
                 android:background="#39ffffff"
                 android:text="결정"
                 android:layout_marginBottom="7dp"
                 android:textColor="#ff0101" />

             <Button
                 android:id="@+id/modi_button2"
                 android:layout_width="50dp"
                 android:layout_height="17dp"
                 android:background="#39ffffff"
                 android:layout_marginBottom="7dp"
                 android:text="수정"
                 android:layout_marginRight="10dp"
                 android:textColor="#ff0101" />
         </LinearLayout>
    </LinearLayout>


</LinearLayout>